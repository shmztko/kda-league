= form_for(@game_result) do |f|
  - if @game_result.errors.any?
    #error_explanation
      %h2
        = pluralize(@game_result.errors.count, "error")
        prohibited this game_result from being saved:
      %ul
        - @game_result.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :scheduled_at
    = f.text_field :scheduled_at, id: 'datepicker'
  .field
    = f.label :home_shop
    = f.collection_select(:home_shop, @shops, :id, :name, :selected => @game_result.home_shop.id)
  .field
    = f.label :away_shop
    = f.collection_select(:away_shop, @shops, :id, :name, :selected => @game_result.away_shop.id)
  .field
    = f.label :winning_type
    %br/
    = f.collection_select(:winning_type, @winning_types, :id, :label, :include_blank => true, :selected => @game_result.winning_type)
  .field
    = f.label :home_score
    %br/
    = f.text_field :home_score
  .field
    = f.label :away_score
    %br/
    = f.text_field :away_score
  .actions
    = f.submit
